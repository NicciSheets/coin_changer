<body>
	<h1 id="heading" name="my_heading" class="heading_wombat"> Make It Rain </h1>
	<img src="/img/money.gif">

<form method = "post" action = "get_change"> <!--action is where you're routing data -->
<div class="box">
  <div class="container-1">
      <span class="icon"><i class="fa fa-search"></i></span>
      <input type="number" name = "coin_input" id="search" placeholder="Show me the money..." /></n><br>
      <button type="submit"> $$ </button>
  </div>
</div>
</form>
<div class = "box2">
<div class = "box3">
	<%= input2 %>
</div>
<div class = "box4">
	<% result.each_pair do |key, value| %>
		<% if value > 0 %>
			<% if value > 1 %>
				<%= value %><!-- the equals sign (=) means it shows on 	user screen -->
					<% if key.to_s == "Penny" && value > 1 %>
						<%= key = "Pennies" %>
					<% elsif value > 1 %>
						<%= key.to_s + "s" %>
					<% end %>
			<% else %>
				<%= value %> <%= key %>
			<% end %>
		<% end %>
	<% end %>
</div>
</div>
