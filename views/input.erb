
<link rel="stylesheet" type="text/css" href="css/input.css">
<body>
<h1 id="heading" name="my_heading" class="heading_wombat"> Make It Rain </h1>
<form method = "post" action = "get_change"> <!--action is where you're routing data -->
<div class="box">
  <div class="container-1">
      <span class="icon"><i class="fa fa-search"></i></span>
      <input type="number" name = "coin_input" id="search" placeholder="Show me the money..." />
  </div>
</div>
</form>
<div class = "box2">
	<div class="container-2">	
	<% result.each_pair do |key, value| %>
		<% if value > 0 %>
			<% if value > 1 %>
				<div style = "color: red" class="results" > <%= value %> </div><!-- the equals sign (=) means it shows on 	user screen -->
				<% if key.to_s == "penny" && value > 1 %>
					<div style = "color: red" class="results" > <%= key = "pennies" %> </div>
				<% elsif value > 1 %>
					<div style = "color: red" class="results" > <%= key.to_s + "s" %> </div>
				<% end %>
			<% else %>
				<div style = "color: red" class="results" > <%= value %> </div>
				<div style = "color: red" class="results" > <%= key %> </div>
			<% end %>
		<% end %>
	<% end %>
</div>
</div>
</body>		